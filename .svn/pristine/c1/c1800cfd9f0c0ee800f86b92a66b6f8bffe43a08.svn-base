.title {
	color: #313131;
	text-align: center;
	padding: 36px 0 30px;
	font-size: 16px;
}

.title img {
	width: 80px;
}

.instant-message {
	position: fixed;
	top: 0;
	width: 100%;
	text-align: center;
	z-index: 9999;
	background: #ff5710;
	line-height: 20px;
	color: #fff;
	padding: 4px 10px;
	display: none;
	letter-spacing: 1px;
}

.page.msg_success, .page.msg_warn {
	position: fixed;
	top: 0;
	background: #FFF;
	bottom: 0;
	z-index: 2;
	left: 0;
	right: 0;
	display: none;
}

.page.msg_success.js_show, .page.msg_warn.js_show {
	display: block;
}

.slideInRight {
	animation-duration: 0.5s;
	animation-name: slideInRight;
}

@keyframes slideInRight {
	from { transform: translate3d(100%, 0, 0); visibility: visible; }
	to { transform: translate3d(0, 0, 0); }
}